@model IEnumerable<EFCore_CodeFirstDemo.Models.Department>
    <h2>  Deaprtment List</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Location</th>
        </tr>
        </thead>
        <tbody>
            @foreach(var dept in Model)
            {
            <tr>
                <td>@dept.DepartmentId</td>
                <td>@dept.DepartmentName</td>
                <td>@dept.Location</td>
                <td> 
                    <a asp-action="Edit" asp-controller="Department"
                    asp-route-id="@dept.DepartmentId">Edit</a> 
                    </td>
                <td>
                    <a asp-action="Delete" asp-controller="Department"
                   asp-route-id="@dept.DepartmentId">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>