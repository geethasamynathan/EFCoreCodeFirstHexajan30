@model EFCore_CodeFirstDemo.Models.Department

<h2> Edit Department details</h2>

<form asp-action="Edit" asp-controller="Department" method="Post">
    <div class="form-group">
        <label asp-for="DepartmentId" class="form-control col-sm-2">Id</label>
        <input asp-for="DepartmentId" class="form-control col-sm-10" readonly="true" />
    </div>
    <div class="form-group">
        <label asp-for="DepartmentName" class="form-control col-sm-2"> Name</label>
        <input asp-for="DepartmentName" class="form-control col-sm-10" />
    </div>
    <div class="form-group">
        <label asp-for="Location" class="form-control col-sm-2">
           Location
        </label>
        <input asp-for="Location" class="form-control col-sm-10" />
    </div>
    <div>
        <button type="submit" class="btn btn-success">Update</button>
    </div>
</form>