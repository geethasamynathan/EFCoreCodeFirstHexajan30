@model EFCore_CodeFirstDemo.Models.Department

<h2>  Create</h2>

<form asp-action="Create" asp-controller="Department" method="Post">
    <div  class="form-group">
        <label asp-for="DepartmentName" class="form-control col-sm-2">Enter the Name</label>
        <input asp-for="DepartmentName" class="form-control col-sm-10" />
    </div>
    <div class="form-group">
        <label asp-for="Location" class="form-control col-sm-2">
            Enter the Location</label>
        <input asp-for="Location" class="form-control col-sm-10" />
    </div>
    <div>
        <button type="submit" class="btn btn-success">Create</button>
    </div>
</form>